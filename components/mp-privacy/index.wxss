.modal-box {
  height: 100vh;
  width: 100vw;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 99999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dialog {
  width: 90%;
  padding: 40rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 16rpx;
}

.title {
  text-align: center;
  color: #333;
  font-weight: bold;
  font-size: 34rpx;
}

.content {
  font-size: 32rpx;
  color: #666;
  margin-top: 40rpx;
  text-align: justify;
  line-height: 1.6;
  padding: 10rpx 20rpx;
}

.link {
  color: #19be6b;
  display: inline;
}

.btn-box {
  margin-top: 50rpx;
  display: flex;
  text-align: center;
}

.btn::after {
  border: none;
  display: none;
}

.hover {
  opacity: 0.7;
}

.btn-box .btn {
  width: 50%;
  height: 76rpx;
  line-height: 76rpx;
  margin: 0 10rpx;
  padding: 0;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  font-weight: 500;
}

.disagree {
  background: #f4f4f5;
  color: #19be6b;
}

.agree {
  background: #19be6b;
  color: #fff;
}